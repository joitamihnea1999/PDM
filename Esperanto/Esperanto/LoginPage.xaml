<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esperanto.LoginPage"
             Title="Login"
             BackgroundColor="#ECE7B4">
    
    <ContentPage.Content>
        <StackLayout WidthRequest="400" Margin="40" HorizontalOptions="Center">
          
            <Entry Keyboard="Text" x:Name="entryEmail" Placeholder="Email" StyleClass="input" ClearButtonVisibility="WhileEditing" />
            <Entry Keyboard="Text" x:Name="entryParola" IsPassword="true" StyleClass="input" Placeholder="Password"/>

            <Button Text="Login" Clicked="Login_Clicked" />
            <Button Text="Register" Clicked="CreazaCont_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>