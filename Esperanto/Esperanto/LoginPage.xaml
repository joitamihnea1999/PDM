<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esperanto.LoginPage"
             Title="Login"
             BackgroundImageSource="Background.png">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login!"
                HorizontalOptions="CenterAndExpand" />

            <Entry Keyboard="Text" x:Name="entryEmail" Placeholder="Email"/>
            <Entry Keyboard="Text" x:Name="entryParola" Placeholder="Parola"/>

            <Button Text="Logheaza-te" Clicked="Login_Clicked" />
            <Button Text="Creaza Cont" Clicked="CreazaCont_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>