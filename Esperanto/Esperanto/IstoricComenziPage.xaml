<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esperanto.IstoricComenziPage"
             Title="Istoric"
               >
    <ListView x:Name="comenziListView" SeparatorColor="#406343" SeparatorVisibility="Default" RowHeight="130" >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell >
                    <StackLayout >
                        <Label Text="{Binding Info, StringFormat=' {0}'}" VerticalOptions="Center" TextColor="#406343" FontAttributes="Bold" Margin="10,20"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>