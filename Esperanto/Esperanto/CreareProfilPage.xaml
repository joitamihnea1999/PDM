<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esperanto.CreareProfilPage"
             Title="Creare Cont"
             >
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create your account" Margin="40"
            
                HorizontalOptions="CenterAndExpand" />

            <Entry Keyboard="Text" x:Name="entryEmail" Placeholder="Email"/>
            <Entry Keyboard="Text" x:Name="entryParola" IsPassword="True" Placeholder="Parola"/>
            <Entry Keyboard="Text" x:Name="entryNume" Placeholder="Nume"/>
            <Entry Keyboard="Text" x:Name="entryTelefon"  Placeholder="Telefon"/>
            <Button Text="Salveaza" Clicked="SalveazaCont_Clicked" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>