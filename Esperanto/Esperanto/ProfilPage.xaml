<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esperanto.ProfilPage"
             Title="Profil"
               >
    <ContentPage.Content>
        <ListView x:Name="listViewProfil">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Nume, StringFormat='Nume: {0}'}" VerticalOptions="Center"/>
                            <Label Text="{Binding Email, StringFormat='Email: {0}'}" VerticalOptions="Center"/>
                            <Label Text="{Binding Telefon, StringFormat='Telefon: {0}'}" VerticalOptions="Center"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>